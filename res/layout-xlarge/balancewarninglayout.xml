<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="736dp"
    android:layout_height="200dp"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android"
    android:background ="@drawable/warningbackgroundxlarge">
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Your balance is below 0. You have only two more chances to take out additional loan."
    	android:textSize="36dp"
    	android:id="@+id/tv" 
    />
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        
    >
    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:text="OK"
        android:id="@+id/okbutton" 
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
    />
    </RelativeLayout>
</LinearLayout>